<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender para mostrar logs en la consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender para guardar logs de benchmarks -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>benchmark-results/benchmark-execution.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger con nivel INFO -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Logger específico para benchmarks con nivel FINE para detalles -->
    <logger name="io.warmup.benchmark" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Logger para JMH con nivel WARN para reducir ruido -->
    <logger name="org.openjdk.jmh" level="WARN" />
    <logger name="jmh" level="WARN" />

    <!-- Logger para framework warmup con nivel INFO -->
    <logger name="io.warmup.framework" level="INFO" />

    <!-- Logger para componentes específicos con nivel FINE -->
    <logger name="io.warmup.framework.core" level="FINE" />
    <logger name="io.warmup.framework.startup" level="FINE" />
</configuration>